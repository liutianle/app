<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/myApp.PopupOverlay" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="20dp"
                android:paddingLeft="-130dp"
                android:src="@drawable/back"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="设置"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:contentPaddingTop="10dp"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="15dp"
            app:contentPaddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:text="头像"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="3"
                        android:src="@drawable/user_logo" />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:src="@drawable/right" />
                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="0.01dp"
                        android:background="@color/grey">

                    </View>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="昵称"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="万平"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:src="@drawable/right"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp" />
                </LinearLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:background="@color/grey">

                </View>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:text="生日"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_birth"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="2018-04-23"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/right"
                        android:layout_gravity="center"
                        android:layout_height="20dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey">

                </View>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:text="性别"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_sex"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="保密"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/right"
                        android:layout_gravity="center"
                        android:layout_height="20dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey">

                </View>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:text="住址"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/admin_address"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="xx省xx市xx街"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/right"
                        android:layout_gravity="center"
                        android:layout_height="20dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.01dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey">

                </View>
                <LinearLayout
                    android:id="@+id/exit_login"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:text="退出登录"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/right"
                        android:layout_gravity="center"
                        android:layout_height="20dp" />

                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>
</LinearLayout>
